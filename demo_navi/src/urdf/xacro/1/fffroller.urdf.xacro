<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:macro
		name="roller_macro"
		params="parent name xyz rpy"
	>

		<link name="roller_${name}_rim_${parent}_link">

			<inertial>

				<mass value="0.1"/>
				<inertia
					ixx="3.1e-10"
					ixy="0"
					ixz="0"
					iyy="3.1e-10"
					iyz="0"
					izz="1.47e-10"
				/>

			</inertial>
			<visual>

				<geometry>

					<mesh filename="package://demo_navi/src/meshes/froller.stl"/>

				</geometry>
				<material name="roller_material">

					<color rgba="0.1 0.1 0.1 1"/>

				</material>

			</visual>
			<collision>

				<geometry>

					<mesh filename="package://demo_navi/src/meshes/froller.stl"/>

				</geometry>

			</collision>

		</link>
		<joint
			name="roller_${name}_rim_${parent}_joint"
			type="continuous"
		>

			<parent link="rim_${parent}_link"/>
			<child link="roller_${name}_rim_${parent}_link"/>
			<axis xyz="1 0 0"/>
			<origin
				xyz="${xyz}"
				rpy="${rpy}"
			/>			

		</joint>

	</xacro:macro>

</robot>
