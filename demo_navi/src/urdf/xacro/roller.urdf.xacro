<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:macro
		name="roller_macro"
		params="parent name xyz rpy"
	>

		<link name="roller_${name}_rim_${parent}_link">

			<inertial>

				<mass value="0.1"/>
				<inertia
					ixx="6.8e-05"
					ixy="0"
					ixz="0"
					iyy="6.8e-05"
					iyz="0"
					izz="0.000101"
				/>

			</inertial>
			<visual>

				<geometry>

					<mesh filename="package://demo_navi/src/meshes/roller.stl"/>

				</geometry>
				<material name="roller_material">

					<color rgba="0.1 0.1 0.1 1"/>

				</material>

			</visual>
			<collision>

				<geometry>

					<mesh filename="package://demo_navi/src/meshes/roller.stl"/>

				</geometry>
			</collision>

		</link>
		<joint
			name="roller_${name}_rim_${parent}_joint"
			type="continuous"
		>

			<parent link="rim_${parent}_link"/>
			<child link="roller_${name}_rim_${parent}_link"/>
			<axis xyz="0 1 0"/>
			<origin
				xyz="${xyz}"
				rpy="${rpy}"
			/>
		</joint>
	<gazebo reference="roller_${name}_rim_${parent}_link">
  				<!--<mu1>5000.0</mu1>
  				<mu2>2500.0</mu2>
      			<kp  value="10000000.0" />
      			<maxContacts  value="10" />
      			<kd  value="1.0" />
      			<fdir1 value="1 0 0"/>-->

    <material>Gazebo/Grey</material>
  </gazebo>
  <!--<gazebo reference="roller_${name}_rim_${parent}_joint">
    <dampingFactor>10</dampingFactor>
    <minDepth>0.001</minDepth>
  </gazebo>-->
	</xacro:macro>

</robot>
