<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:macro
		name="roller_macro"
		params="parent name xyz rpy"
	>

		<link name="roller_${name}_rim_${parent}_link">

			<inertial>

				<mass value="0.0011"/>
				<inertia
					ixx="2e-08"
					ixy="0"
					ixz="0"
					iyy="2e-08"
					iyz="0"
					izz="9e-08"
				/>

			</inertial>
			<visual>

				<geometry>

					<mesh filename="package://demo_navi/src/meshes/roller1.stl"/>

				</geometry>
				<material name="roller_material">

					<color rgba="0.1 0.1 0.1 1"/>

				</material>

			</visual>
			<collision>

				<geometry>

					<mesh filename="package://demo_navi/src/meshes/roller1.stl"/>

				</geometry>
				<surface>
        			<friction>
          				<ode>
            				<mu>0.1</mu>
            				<mu2>0.1</mu2>
          				</ode>
        			</friction>
      			</surface>

			</collision>

		</link>
		<joint
			name="roller_${name}_rim_${parent}_joint"
			type="continuous"
		>

			<parent link="rim_${parent}_link"/>
			<child link="roller_${name}_rim_${parent}_link"/>
			<axis xyz="1 0 0"/>
			<origin
				xyz="${xyz}"
				rpy="${rpy}"
			/>
		</joint>
	<gazebo reference="roller_${name}_rim_${parent}_link">
    <dampingFactor>10</dampingFactor>
    <minDepth>0.001</minDepth>
    <fdir1>0 0 1</fdir1>
    <kp>500000.0</kp>
    <kd>10.0</kd>
    <maxVel>0.1</maxVel>
    <fdir1>1 0 0</fdir1>
    <material>Gazebo/Grey</material>
  </gazebo>
  <gazebo reference="roller_${name}_rim_${parent}_joint">
    <dampingFactor>10</dampingFactor>
    <minDepth>0.001</minDepth>
  </gazebo>
	</xacro:macro>

</robot>
